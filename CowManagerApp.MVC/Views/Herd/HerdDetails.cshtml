@model CowManagerApp.MVC.Models.Herd

<h1>Cows in herd: @Model.Id</h1>
<p>Total Cows: @Model.AmountOfCows</p>


<a asp-action="Index" asp-controller="Herd" >Back to Herds</a>|
<a asp-action="HerdEdit" asp-route-id="@Model.Id">Edit</a> |
<a asp-action="HerdDelete" asp-route-id="@Model.Id">Delete</a> |
<a asp-action="AddCow" asp-route-idh="@Model.Id" >Add Cow</a>



<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Comment
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cows)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Comment
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>