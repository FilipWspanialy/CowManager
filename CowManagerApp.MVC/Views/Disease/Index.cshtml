@model IEnumerable<CowManagerApp.MVC.Models.Disease>
@{
    ViewData["Title"] = "List";
}
<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    <a asp-action="DiseaseDetails" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>

        }
    </tbody>
</table>
